{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "htmx",
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "outDir": "./test/build"
  },
  "include": [
    "src",
    "test",
    ".eslintrc.js",
    "rollup.config.js"
  ]
}